{
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true
  },
  "[django-html]": {
    "editor.defaultFormatter": "monosans.djlint",
    "editor.foldingStrategy": "indentation"
  },
  "[html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "editor.formatOnSave": true,
  "files.associations": {
    "*.njk": "nunjucks"
  },
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "json"
  ],
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build Project",
        "type": "npm",
        "script": "build",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Serve Project",
        "type": "npm",
        "script": "serve",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }
}